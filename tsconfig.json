{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "newLine": "lf",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
